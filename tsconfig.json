{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonJS",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "composite": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@adapter/*": [
        "./src/adapter/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@controller/*": [
        "./src/controller/*"
      ],
      "@usecase/*": [
        "./src/usecase/*"
      ],
      "@utils/*": [
        "./src/utils/*",
        "./src/controller/utils/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@middleware/*": [
        "./src/middleware/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts"
  ]
}